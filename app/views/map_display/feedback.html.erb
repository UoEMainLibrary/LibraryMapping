<!-- User feedback interface -->
<link rel="stylesheet" href="https://www.librarymaps.is.ed.ac.uk/assets/css/font-awesome.min.css">
<div id="main-container">
  <nav id="mappingNavbar" class="bg-blue" role="navigation">
    <%= render 'mapping_navbar' %>
  </nav>
  <div class="feedback-container text-center">
    <h4>If your want to report a problem with the site please email: <a href="mailto:IS.Helpline@ed.ac.uk">IS.Helpline@ed.ac.uk</a></h4>
     <img class="img-responsive pic" src="/assets/feedbackimg.png">
  <%= form_for @message, url: '/feedback', html: {class: "form-horizontal text-center"} do |f| %>
      <% if @success %>
          Thank you for the valuable input.
      <% end %>
      <div class="form-group">
        <%= f.label :name, :class=>'control-label col-sm-2' %>
        <div class="col-sm-8">
          <%= f.text_field :name, :class=> 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, :class=>'control-label col-sm-2' %>
        <div class="col-sm-8">
        <%= f.email_field :email, :class=> 'form-control'  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :message, :class=>'control-label col-sm-2' %>
        <div class="col-sm-8">
        <%= f.text_area :message, :class=> 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
          <%= f.submit 'Send', class: 'btn btn-save marginTop' %>
        </div>
        <div class="col-sm-4">
          <a href="/" data-no-turbolink="true"><button type="button" class="btn btn-object-action marginTop">Cancel</button></a>
        </div>
      </div>
    <% end %>
  </div>
  <!--Footer-->
</div>